%h1 Listing movies

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Url
      %th Thumbnails
      %th Play list
      %th Owner
      %th
      %th
      %th

  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.name
        %td= movie.description
        %td= movie.url
        %td= movie.thumbnails
        %td= movie.play_list_id
        %td= movie.owner_id
        %td= link_to 'Show', movie
        %td= link_to 'Edit', edit_movie_path(movie)
        %td= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Movie', new_movie_path
