= form_for @movie, url: movies_shares_url do |f|
  - if @movie.errors.any?
    #error_explanation
      %h2= "#{pluralize(@movie.errors.count, "error")} prohibited this movie from being saved:"
      %ul
        - @movie.errors.full_messages.each do |message|
          %li= message
  .field.form-group.row
    = f.label "Youtube URL:", class: "col-sm-2 col-form-label"
    .col-sm-10
      = f.text_field :url, class: "form-control"
  .actions.text-center
    = f.submit 'Share', class: "btn btn-primary"
